<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Acervo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/home.css">
</head>
<body>
<header class="container-header">
    <nav class="container-nav">
        <div>
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">BuscaBook</a>
        </div>
        <ul>
            <li>
                <a class="home" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li>
                <a class="catalogo" asp-area="" asp-controller="Catalogo" asp-action="Index">Catálogo</a>
            </li>
            <li>
                <a class="login" asp-area="" asp-controller="Login" asp-action="index">Login</a>
            </li>
        </ul>
    </nav>
</header>

<main class="container">
    @RenderBody()
</main>

<footer class="border-top footer text-muted">
    <div>
        &copy; 2023 - Acervo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>