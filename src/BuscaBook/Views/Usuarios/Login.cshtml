@model BuscaBook.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/login.css">

</head>
<body>
    <form asp-action="Login">
        <div class="authContainer">
            <div class="d-none d-lg-block authInfo">
                <h1 class="authInfoTitle">Área de acesso <br /> restrito</h1>
                <p class="authInfoSubtitle">Área de acesso do administrador</p>
                <img src="../../img/password.png" alt="Background Login" class="authInfoImg" />
            </div>
            <div class="card-base authCard">
                <div class="authContent">
                    <form class="d-flex flex-column align-items-center justify-content-between loginForm">
                        <h2 class="text-center mb-5 formTitle">Login</h2>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Senha" class="control-label"></label>
                            <input asp-for="Senha" class="form-control" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="btn-container text-align-center">
                            <button type="submit" value="Entrar" class="btn btn-primary">
                                <a asp-area="" asp-controller="Usuarios" asp-action="Index"><h6>Entrar</h6></a>
                            </button>
                            <div class="btn-icon-container">
                                <i class="fa-solid fa-arrow-right"></i>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </form>
    <h3>@ViewBag.Message</h3>
</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
